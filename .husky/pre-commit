#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Format and lint staged files
echo "ğŸ“ Formatting and linting staged files..."
npx lint-staged

# Type check (faster than full build)
echo "ğŸ”§ Running TypeScript type check..."
npx tsc --noEmit

# Build check to catch module resolution and other build errors
echo "ğŸ—ï¸  Running build check..."
npm run format

# Auto-stage any files modified by lint-staged or format
echo "ğŸ“¦ Auto-staging modified files..."
git add -A

echo "âœ… All pre-commit checks passed!"