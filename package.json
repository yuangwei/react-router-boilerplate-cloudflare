{
  "name": "react-router-cloudflare-boilerplate",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "cf-typegen": "wrangler types",
    "deploy": "npm run build && wrangler deploy",
    "dev": "react-router dev",
    "postinstall": "npm run cf-typegen",
    "preview": "npm run build && vite preview",
    "typecheck": "npm run cf-typegen && react-router typegen && tsc -b",
    "format": "biome format --write ./src/**/*.{ts,tsx}",
    "prepare": "husky install",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "auth:generate": "NODE_ENV=development npx @better-auth/cli generate --output=./src/db/schema/auth.ts",
    "auth:migrate": "NODE_ENV=development npx @better-auth/cli migrate"
  },
  "dependencies": {
    "@better-auth/stripe": "^1.3.31",
    "@libsql/client": "^0.15.15",
    "@radix-ui/react-slot": "^1.2.3",
    "better-auth": "^1.3.31",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "isbot": "^5.1.27",
    "lucide-react": "^0.548.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router": "^7.7.1",
    "stripe": "^19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.0",
    "@cloudflare/vite-plugin": "^1.0.12",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@react-router/dev": "^7.7.1",
    "@tailwindcss/vite": "^4.1.4",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^20",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "drizzle-kit": "^0.31.5",
    "husky": "^9.1.7",
    "tailwindcss": "^4.1.4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.33.0"
  },
  "lint-staged": {
    "./src/*.{js,jsx,ts,tsx,json,mdx}": [
      "biome format --write"
    ]
  }
}
